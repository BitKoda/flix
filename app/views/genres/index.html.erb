<h1>Genres</h1>
<% if @genres.present? %>
  <table class="table table-mb-4">
    <tbody>
      <th>Genre</th>
      <th>Number of movies</th>
      <% if current_user_admin? %>
        <th>Action</th>
      <% end %>
    <% @genres.each do | genre | %>
      <tr>
        <td><%= link_to genre.name, genre %></td>
        <td><%= genre.movies.size %></td>
        <% if current_user_admin? %>
          <td><%= button_to "Delete", genre, class: "btn btn-outline-danger btn-sm", method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
<% if current_user_admin? %>
<section class="admin">
  <%= link_to "Add Genre", new_genre_path, class: "button" %>
</section>
<% end %>
