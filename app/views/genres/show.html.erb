<h1><%= @genre.name.capitalize %> Movies</h1>
<% if @movies.present? %>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-lg-2 mb-3 d-flex align-items-stretch">
        <div class="card">
          <div class="image">
            <%= main_image(movie) %>
          </div>
          <div class="card-body">
            <% if movie.released_on < Time.now %>
              <h6 class="card-title"><%= link_to movie.title, movie %></h6>
              <p class="card-text"><%= movie.released_on.to_fs(:rfc822) %></p>
            <% else %>
              <h6 class="card-title">Not released yet.</h6>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No movies for this genre yet. <%= link_to "Why not add some?", signin_path %></p>
  <% end %>
