<section class="user">
  <%= profile_image(@user) %>
  <% if @user == current_user %>
    <h3>Welcome, <%= @user.username %></h3>
  <% end %>
  <h2><%= @user.name %></h2>
  <p><%= mail_to @user.email %></p>
  <p>Member since: <%= @user.created_at.strftime("%B %Y") %></p>
  <div class="actions">
    <% if current_user?(@user) %>
    <%= link_to "Edit Account", 
      edit_user_path(@user), class: "button edit" %>
    <% end %>
    <% if current_user_admin? %>
      <%= link_to "Delete Account",
        user_path(@user), 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this account?" },      class: "button delete" %>
    <% end %>
  </div>

  <% if @reviews.present? %>
    <h3>My Reviews</h3>
    <% @reviews.each do |r| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to r.movie.title, r.movie %>
          </span>
          <%= pluralize(r.stars, 'star') %>
          <span class="date">
            <%= time_ago_in_words(r.created_at) %> ago.
          </span>
          <p>
            <%= r.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
  <% if @favourite_movies.present? %>
    <div class="row">
      <h3>Favourite Movies</h3>
      <% @favourite_movies.each do |movie| %>
        <div class="col-lg-2 mb-3 d-flex align-items-stretch">
          <div class="card">
            <div class="image">
              <%= link_to main_image(movie), movie %>
            </div>
        <div class="card-body">
          <% if movie.released_on < Time.now %>
            <h6 class="card-title"><%= link_to movie.title, movie %></h6>
            <p class="card-text"><%= movie.released_on.to_fs(:rfc822) %></p>
          <% else %>
            <h6 class="card-title">Not released yet.</h6>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
    </div>
  <% end %>
</section>
