    <div class="row">
<% @movies.each do |movie| %>
      <div class="col-lg-2 mb-3 d-flex align-items-stretch">
         <div class="card">
          <div class="image">
            <%= main_image(movie) %>
          </div>
          <div class="card-body">
            <% if movie.released_on < Time.now %>
              <h6 class="card-title"><%= link_to movie.title, movie %></h6>
              <p class="card-text"><%= movie.released_on.to_fs(:rfc822) %></p>
            <% else %>
              <h5 class="card-title">Not released yet.</h5>
            <% end %>
          </div>
        </div>
      </div>
<% end %>

    </div>
<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add a New Movie", new_movie_path, class: "button" %>
  </section>
<% end %>
