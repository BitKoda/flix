<% @movies.each do |movie| %>
  <section class="movie">
    <div class="image">
      <%= image_tag movie.image_file_name %>
    </div>

    <div class="summary">
      <h2>
        <%= link_to movie.title, movie %>
      </h2>
      <% if movie.released_on < Time.now %>
        <h3><%= total_gross(movie) %></h3>
        <%= render "shared/stars", object: movie %>
        <% else %>
          <h3>Not released yet</h3>
      <% end %>
      <p>
        <%= truncate(movie.description, length: 150, separator: ' ') %>
      </p>
    </div>
  </section>
<% end %>

<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Add a New Movie", new_movie_path, class: "button" %>
  </section>
<% end %>
