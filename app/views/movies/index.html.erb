<% if current_user %>
  <section class="sticky-top admin">
    <%= link_to "+ Add Movie", new_movie_path, class: "btn btn-outline-primary" %>
  </section>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-lg-2 mb-3 d-flex align-items-stretch">
      <div class="card">
        <div class="image">
          <%= main_image(movie) %>
        </div>
        <div class="card-body">
          <% if movie.released_on < Time.now %>
            <h6 class="card-title"><%= link_to movie.title, movie %></h6>
            <p class="card-text"><%= movie.released_on.to_fs(:rfc822) %></p>
          <% else %>
            <h6 class="card-title"><%= link_to movie.title, movie %></h6>
            <p>Not released yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
